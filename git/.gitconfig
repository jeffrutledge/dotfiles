# Local/private config goes in the include
[include]
        path = ~/.gitconfig.local
[hub]
        protocol = https
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore_global
        editor = vim
[diff]
        tool = vimdiff
[difftool]
        prompt = true
[help]
        autocorrect = 1
[push]
        default = simple
