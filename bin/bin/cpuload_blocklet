#!/bin/zsh
#
# Output is formatted for i3blocks
#

LOAD=$(cat /proc/loadavg | cut -d ' ' -f1)
NLOAD=$(printf '%.2f' $(( $LOAD / $(nproc) )))

COLOR=''
if (( $NLOAD > 0.95 ))
then
  COLOR=$(colorscheme red)
elif (( $NLOAD > 0.85 ))
then
  COLOR=$(colorscheme yellow)
fi

echo $NLOAD
echo $NLOAD
echo $COLOR
exit
