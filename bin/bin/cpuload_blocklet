#!/bin/zsh
#
# Output is formatted for i3blocks
#

LOAD=$(cat /proc/loadavg | cut -d ' ' -f1)

NORM_LOAD=$(printf %0.2f $(( $LOAD / $(nproc) )))

COLOR=''
if (( $NORM_LOAD > 1 ))
then
  COLOR=$(colorscheme red)
elif (( $NORM_LOAD > 0.85 ))
then
  COLOR=$(colorscheme yellow)
fi

echo C $NORM_LOAD
echo C $NORM_LOAD
echo $COLOR
exit
